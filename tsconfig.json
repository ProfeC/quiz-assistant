{
  "compilerOptions": {
    "alwaysStrict": true,
    "jsx": "react",
    "module": "commonjs",
    "newLine": "LF",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "removeComments": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "es2015",
    "allowJs": true
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.d.ts",
    "./src/old/**/*"
  ],
  "include": [
    "./app/**/*"
  ]
}
